<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Assignment_01</display-name>
  <welcome-file-list>
    <welcome-file>home.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>app.one.controller.LoginServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SignUpServlet</servlet-name>
    <servlet-class>app.one.controller.SignUpServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignUpServlet</servlet-name>
    <url-pattern>/signUp</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SignoutServlet</servlet-name>
    <servlet-class>app.one.controller.SignoutServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ProfileApi</servlet-name>
    <servlet-class>app.one.controller.ProfileApi</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProfileApi</servlet-name>
    <url-pattern>/api/get/myDetails</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GetBeaconProducts</servlet-name>
    <servlet-class>app.one.controller.GetBeaconProducts</servlet-class>
    <init-param>
      <param-name>credential</param-name>
      <param-value>/WEB-INF/BeaconServerNew</param-value>
    </init-param>
    <init-param>
      <param-name>databaseUrl</param-name>
      <param-value>https://my-notification-center.firebaseio.com/</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetBeaconProducts</servlet-name>
    <url-pattern>/api/get/getProducts</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GetUsers</servlet-name>
    <servlet-class>app.one.controller.GetUsers</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetUsers</servlet-name>
    <url-pattern>/api/get/getUsers</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>GetMapData</servlet-name>
    <servlet-class>app.one.controller.GetMapData</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetMapData</servlet-name>
    <url-pattern>/api/get/getMapData</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>UpdateMapData</servlet-name>
    <servlet-class>app.one.controller.UpdateMapData</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateMapData</servlet-name>
    <url-pattern>/api/get/update/map_data</url-pattern>
  </servlet-mapping>
  
  
  
  <session-config>
    <session-timeout>10</session-timeout>
  </session-config>
</web-app>